{% extends 'base.html.twig' %}

{% block body %}
    <div class="example-wrapper">

        {{ form_start(form) }}

        <div class="container">

            {{ form_errors(form) }}

            {{ form_row(attribute(form, 'submit_top')) }}

            <div class="row mt-2">
                {% for i in 0..maxIndex %}

                    {% set idField=['id_', i]|join %}
                    {% set inboundField=['inbound_', i]|join %}
                    {% set nameField=['name_', i]|join %}
                    {% set urlField=['url_', i]|join %}
                    {% set typeField=['type_', i]|join %}
                    {% set bodyField=['body_', i]|join %}
                    {% set displayRow=i+1 %}

                    <div class="col-md-6 mb-4">

                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><span class="badge badge-info">{{ displayRow }}</span></h5>
                                <p class="card-text">
                                    {{ form_row(attribute(form, idField)) }}
                                    {{ form_row(attribute(form, nameField)) }} <br />
                                    {{ form_row(attribute(form, inboundField)) }} <br />
                                    {{ form_row(attribute(form, urlField)) }} <br />
                                    {{ form_row(attribute(form, typeField)) }} <br />
                                    {{ form_label(attribute(form, bodyField)) }} <br />
                                    {{ form_widget(attribute(form, bodyField)) }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {{ form_row(attribute(form, 'submit_bottom')) }}
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}
